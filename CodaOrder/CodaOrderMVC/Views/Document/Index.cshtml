<div ng-controller="DocumentLoadController">
    <button class="btn btn-success" ng-click="refresh()">Refresh</button>
</div>

<div ng-controller="DocumentDateController">
    <form name="frmDateRange" novalidate="">
        <div class="row">
            <div class="col-lg-2">
                <p class="input-group">
                    <input type="text"
                           class="form-control"
                           datepicker-popup="{{format}}"
                           ng-model="dateStart"
                           is-open="openedStart"
                           min-date="minDate"
                           max-date="'2099-12-31'"
                           datepicker-options="dateOptions"
                           date-disabled="disabled(date, mode)"
                           required=""
                           name="dateStart"
                           date-lower-than="{{dateEnd| date:'short'}}"
                           close-text="Close" />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default" ng-click="openDateStart($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                    </span>
                </p>
            </div>
            <div class="col-lg-2">
                <p class="input-group">
                    <input type="text"
                           class="form-control"
                           datepicker-popup="{{format}}"
                           ng-model="dateEnd"
                           is-open="openedEnd"
                           min-date="minDate"
                           max-date="'2099-12-31'"
                           datepicker-options="dateOptions"
                           date-disabled="disabled(date, mode)"
                           required=""
                           name="dateEnd"
                           date-greater-than="{{dateStart| date:'short'}}"
                           close-text="Close" />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default" ng-click="openDateEnd($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                    </span>
                </p>
            </div>
            <div class="col-md-4 offset0">
                <span ng-show="frmDateRange.dateStart.$error.required &&
                                !frmDateRange.dateStart.$pristine">
                    Invalid or Empty from date
                </span>
                <span ng-show="frmDateRange.dateStart.$error.dateLowerThan">
                    From date must be lower than To date
                </span>
                <span ng-show="frmDateRange.dateEnd.$error.required
                                && !frmDateRange.dateEnd.$pristine">
                    Invalid or Empty to date
                </span>
                <span ng-show="frmDateRange.dateEnd.$error.dateGreaterThan">
                    To date must be greater than from date
                </span>
            </div>
        </div>
    </form>
</div>

<div class='container-fluid' ng-controller="SearchCodaObjectController" ng-init="init('@Url.Action(@MVC.SearchCodaObject.ActionNames.Subject, @MVC.SearchCodaObject.Name)')">
    <div class="row">
        <div class="col-lg-4">
            <input type="text" ng-model="data.searchCodaObject" placeholder="Enter subject name" typeahead="searchText as searchText.FullName for searchText in getObjects($viewValue)" typeahead-loading="loadingLocations" class="form-control">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <pre ng-cloak>Selected: {{data.searchCodaObject.OID}}</pre>
        </div>
    </div>
</div>

<div ng-controller="DocumentTypeController">
    <div class="row">
        <div class="col-lg-4">
            <ui-select class="form-control" multiple ng-model="data.selectedDocumentType" theme="bootstrap" ng-disabled="disabled">
                <ui-select-match ng-cloak placeholder="Select document type...">{{$item.name}}</ui-select-match>
                <ui-select-choices ng-cloak repeat="docType.name as docType in documentType | filter: {name: $select.search}">
                    <div ng-bind-html="docType.name | highlight: $select.search"></div>
                </ui-select-choices>
            </ui-select>
            <pre ng-cloak>Selected: {{data.selectedDocumentType}}</pre>
        </div>
    </div>
</div>

<div ng-controller="DocumentGridController" ng-init="init('@Url.Action(@MVC.Document.ActionNames.GetDocumentsPost, @MVC.Document.Name)')">
    <div class="gridStyle" ng-grid="gridOptions">
    </div>
</div>

<div ng-controller="DocumentPaginationController">
    <pagination num-pages="numPages"
                total-items="totalRows"
                ng-model="currentPage"
                items-per-page="pageSize"
                max-size="pageNumberCounts"
                class="pagination-sm"
                boundary-links="true"
                rotate="false"
                previous-text="&lsaquo;"
                next-text="&rsaquo;"
                first-text="&laquo;"
                last-text="&raquo;"
                ng-change="pageChanged()">
    </pagination>
</div>
